{
  "name": "ampproject/common",
  "type": "library",
  "description": "PHP library with common base functionality for AMP integrations.",
  "license": "MIT",
  "require": {
    "php": "^5.6 || ^7.0",
    "ext-dom": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-libxml": "*"
  },
  "require-dev": {
    "civicrm/composer-downloads-plugin": "^2.1",
    "jakub-onderka/php-parallel-lint": "^1.0",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3"
  },
  "suggest": {
    "ext-mbstring": "Used by Dom\\Document to convert encoding to UTF-8 if needed."
  },
  "config": {
    "platform": {
      "php": "5.6"
    },
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev",
      "dev-develop": "1.0.x-dev",
      "dev-add/958-amp-optimizer": "1.0.x-dev"
    },
    "downloads": {
      "phpstan": {
        "url": "https://github.com/phpstan/phpstan/releases/download/0.12.14/phpstan.phar",
        "path": "vendor/bin/phpstan",
        "type": "phar"
      }
    }
  },
  "autoload": {
    "psr-4": {
      "AmpProject\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AmpProject\\Tests\\": "tests/src/"
    }
  },
  "scripts": {
    "cbf": "phpcbf --standard=PSR12 -n src tests",
    "cs": "phpcs --standard=PSR12 -s -n src tests",
    "lint": "parallel-lint -j 10 --colors --exclude vendor .",
    "test": [
      "@lint",
      "@unit",
      "@cs",
      "@analyse"
    ],
    "analyse": "phpstan analyse src -l2 --ansi",

    "unit": "phpunit --colors=always"
  }
}
