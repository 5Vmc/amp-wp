{
  "name": "amp/common",
  "type": "library",
  "description": "PHP library with common base functionality for AMP integrations.",
  "homepage": "https://github.com/ampproject/php-common",
  "license": "MIT",
  "require": {
    "php": "^5.6 || ^7.0",
    "ext-dom": "*",
    "ext-iconv": "*",
    "ext-libxml": "*"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3"
  },
  "suggest": {
    "ext-json": "Provides native implementation of json_encode()/json_decode()."
  },
  "config": {
    "platform": {
      "php": "5.6"
    },
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev",
      "dev-add/958-amp-optimizer": "1.0.x-dev"
    }
  },
  "autoload": {
    "psr-4": {
      "Amp\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Amp\\Tests\\": "tests/src/"
    }
  },
  "scripts": {
    "cbf": "phpcbf --standard=PSR12 -n src",
    "cs": "phpcs --standard=PSR12 -n src",
    "lint": [
      "find src -name '*.php' -print0 | xargs -0 -n1 php -l",
      "find tests/src -name '*.php' -print0 | xargs -0 -n1 php -l"
    ],
    "test": [
      "@lint",
      "@unit",
      "@cs"
    ],
    "unit": "phpunit --colors=always"
  }
}
